        <Button x:Name="btn_5" Content="Wyświetl funkcje&#x0a;z liczbą strażaków" Margin="0,237,160,0" VerticalAlignment="Top" Height="40" FontFamily="Bahnschrift" FontSize="14" HorizontalAlignment="Right" Width="202"/>
