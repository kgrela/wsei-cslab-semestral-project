        <TextBlock Margin="160,50,160,0" Text="PROGRAM DO ZARZĄDZANIA BAZĄ DANYCH JEDNOSTKI OCHOTNICZEJ STRAŻY POŻARNEJ" TextWrapping="Wrap" FontSize="22" TextAlignment="Center" FontFamily="Bahnschrift" FontWeight="Normal" Height="107" VerticalAlignment="Top"/>
